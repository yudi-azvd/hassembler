{
  "makefile.extensionOutputFolder": "./.vscode",
  "testMate.cpp.test.advancedExecutables": [
    {
      // https://github.com/matepek/vscode-catch2-test-adapter/blob/master/documents/configuration/test.advancedExecutables.md#testgrouping
      "pattern": "{build,Build,BUILD,out,Out,OUT}/**/*{test,Test,TEST,ut}*",
      "doctest": {
        "testGrouping": {
          "groupByExecutable": {
            "label": "${filename}",
            "description": "${relDirpath}/",
            "groupBySource": {
              "label": "${sourceRelPath[2]}"
            }
          },
        }
      },
    }
  ],
  "triggerTaskOnSave.on": true,
  "triggerTaskOnSave.tasks": {
    "Build tests": [ // Nome da tarefa a ser desencadeada
      "src/montador/!montador.cpp",
      "src/montador/*.cpp",
      "tests/*.cpp",
      "tests/**/*.cpp",
    ],
    "Build assembler": [
      "src/montador/*.cpp",
      "include/assembler.h",
    ],
    "Build simulator": [
      "src/simulador/*.cpp",
      "include/simulador.h",
    ],
  },
  "clang.completion.enable": true,
  "clang.diagnostic.enable": true,
  "clang.cxxflags": ["-pedantic", "-Wall"],
  "files.associations": {
    ".sequelizerc": "javascript",
    ".prettierrc": "json",
    "iostream": "cpp",
    "vector": "cpp",
